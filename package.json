{
  "type": "module",
  "private": true,
  "packageManager": "bun@1.3.4",
  "license": "MIT",
  "workspaces": [
    "filesize-diff"
  ],
  "scripts": {
    "check": "bun run check:eslint && bun run check:unused && bun run check:types",
    "check:artifacts": "bun run build:actions && ! (git status --porcelain | grep '^.M' | grep dist)",
    "check:eslint": "eslint . --cache",
    "check:types": "tsc --noEmit",
    "check:unused": "knip -n",
    "build:actions": "bun -F '*' build",
    "lint": "eslint .",
    "prepare": "bunx simple-git-hooks",
    "test": "vitest",
    "test:coverage": "vitest --coverage"
  },
  "devDependencies": {
    "@kevinmarrec/eslint-config": "^1.7.0",
    "@kevinmarrec/tsconfig": "^1.7.0",
    "@vitest/coverage-v8": "4.0.16",
    "eslint": "^9.39.2",
    "knip": "^5.80.2",
    "typescript": "~5.9.3",
    "vitest": "^4.0.16"
  },
  "simple-git-hooks": {
    "pre-commit": "echo 'Pre-commit checks' && bun run check:artifacts"
  }
}
